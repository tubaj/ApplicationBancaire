<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VirementFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="374dp"
        android:src="@drawable/gradient_background" />

    <TextView
        android:id="@+id/txt_virement"
        android:layout_width="160dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="122dp"
        android:text="Virement"
        android:textSize="35sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="143dp" />

    <EditText
        android:id="@+id/txt_iban_expediteur"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_virement"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="111dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:hint=""
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/txt_iban_destinataire"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_iban_expediteur"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="29dp"
        android:background="@color/white"
        android:hint="Saisir l'iban de votre destinataire"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/edit_montant"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_iban_destinataire"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:hint="Saisir le montant"
        android:paddingLeft="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnVirement"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/edit_montant"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="40dp"
        android:background="@color/teal_200"
        android:hint="Envoyer le virement"
        android:textSize="19dp" />

</RelativeLayout>